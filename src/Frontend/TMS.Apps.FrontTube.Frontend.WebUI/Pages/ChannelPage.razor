@page "/channel/{ChannelId}"

@* This page serves as a redirect endpoint for channel URLs.
   It opens the channel in the dock panel and redirects to the home page. *@

<PageTitle>Loading Channel...</PageTitle>

<MudContainer
    MaxWidth="MaxWidth.ExtraLarge"
    Class="pa-4">
    <MudStack
        AlignItems="AlignItems.Center"
        Justify="Justify.Center"
        Style="min-height: 200px;">
        <MudProgressCircular
            Indeterminate="true"
            Size="Size.Large"
            Color="Color.Primary" />

        <MudText
            Typo="Typo.body1"
            Class="mt-2">
            Opening channel...
        </MudText>
    </MudStack>
</MudContainer>
